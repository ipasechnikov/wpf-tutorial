<Window x:Class="ImageControlSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageControlSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <StackPanel>
        <Label FontWeight="Bold">Image fetched from the internet</Label>
        <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/2/2f/Google_2015_logo.svg/640px-Google_2015_logo.svg.png" Height="100" />

        <Label FontWeight="Bold" Margin="0,20,0,0">Image with Pack URI</Label>
        <Image Source="/ImageControlSample;component/Images/Google_2015_logo.svg.png" Height="100" />

        <Label FontWeight="Bold">Image with Relative URL</Label>
        <Image Source="Images/Google_2015_logo.svg.png" Height="100" />
    </StackPanel>
</Window>
